<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    tools:context=".AdminItemCategory">


    <TextView
        android:id="@+id/in_topic_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:text="Add New Product"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/in_linear_category"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/in_topic_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/in_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dresses" />

        <ImageView
            android:id="@+id/in_top"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/tops" />

        <ImageView
            android:id="@+id/in_skirt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/skirts" />

        <ImageView
            android:id="@+id/in_pants"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/pants" />

    </LinearLayout>
    <TextView
        android:id="@+id/firstRow"
        android:layout_width="1000dp"
        android:layout_height="20dp"
        android:layout_below="@id/in_linear_category"
        android:text="                     1                        2                      3                     4"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/in_linear2_category"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/in_linear_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/in_jackets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jacket" />

        <ImageView
            android:id="@+id/in_hoodies"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/hoodies" />

        <ImageView
            android:id="@+id/in_athletic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/athletic" />

        <ImageView
            android:id="@+id/in_swimwear"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/swimwear" />
    </LinearLayout>

    <TextView
        android:id="@+id/secondRow"
        android:layout_width="1000dp"
        android:layout_height="20dp"
        android:layout_below="@id/in_linear2_category"
        android:text="                 4                         5                      6                         7"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/in_linear3_category"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/in_linear2_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/in_jump_suit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jumsuit" />

        <ImageView
            android:id="@+id/in_office_attire"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/office_attires" />

        <ImageView
            android:id="@+id/in_saree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sarees" />

        <ImageView
            android:id="@+id/in_bathik"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/bathik" />

    </LinearLayout>

    <TextView
        android:id="@+id/thirdRow"
        android:layout_width="1000dp"
        android:layout_height="20dp"
        android:layout_below="@id/in_linear3_category"
        android:text="                    8                        9                      10                     4"
        android:textColor="@color/black"
        android:textStyle="bold" />

