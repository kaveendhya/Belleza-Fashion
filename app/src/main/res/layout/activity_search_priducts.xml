<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPriducts">
    <RelativeLayout

        android:id="@+id/Reley1"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:background="@color/purple_500"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText

            android:id="@+id/in_search_product_name"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="9dp"
            android:background="@color/white"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:textColorHint="@color/black" />
        <Button
            android:id="@+id/in_product_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="9dp"
            android:layout_centerInParent="true"
            android:background="@color/purple_500"
            android:layout_toRightOf="@id/in_search_product_name"
            />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/in_product_searched_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Reley1"
        android:background="@drawable/newbackground"
        />




</RelativeLayout>