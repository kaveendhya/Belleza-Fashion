<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_List"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="3dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/in_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Bliza"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20dp"
            android:textStyle="bold"/>



        <ImageView
            android:id="@+id/in_product_image"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_below="@id/in_product_name"
            android:layout_marginTop="26dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/in_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_product_image"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/in_product_designer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_product_price"
            android:text="Designer"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/in_product_description"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_below="@+id/in_product_designer"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="16dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
